<%- include('partials/header.ejs'); -%>

<div class="container m-2">
    <div class="col-12">
        <button type="button" onclick="window.location.href='/';">Home</button>
    </div>
    
</div>

<div class="container">
    <div class="row">
        <div class="col-12 text-center bg-warning shadow">
            <h1>Guest History List</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <% hguest.forEach(Hguest => { %>
            <div class="col-12 border m-1 text-center ">
                <table class="table shadow">
                    <thead class="bg-primary text-light ">
                        <tr >
                            <th class="border">Room no.</th>
                        <th class="border">Name</th>
                        <th class="border">Govt_Id</th>
                        <th class="border">Address</th>
                            <th class="border">Phone</th>   
                              <th class="border">Joining Date</th>  
                              <th class="border">Joining Time</th> 
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td class="border"><%= Hguest.room_number %></td>
                            <td class="border"><%= Hguest.guest_name %></td>
                            <td class="border"><%= Hguest.guest_id %></td>
                            <td class="border"><%= Hguest.guest_address%></td>
                            <td class="border"><%= Hguest.guest_phone %></td>
                            <td class="border"><%= Hguest.date_of_join %></td>
                            <td class="border"><%= Hguest.time_of_join %></td>

                        </tr>
                        <tr></tr>
                    </tbody>

                </table>
                       <!--Delete-->
            <form action="/del_Hg" method="POST" style="display: inline;">
                <input type="hidden" name="room_number" value="<%= Hguest.room_number %>">
                <input type="hidden" name="guest_name" value="<%= Hguest.guest_name %>">
                <input type="hidden" name="guest_id" value="<%= Hguest.guest_id %>">
                <input type="hidden" name="guest_address" value="<%= Hguest.guest_address %>">
                <input type="hidden" name="guest_phone" value="<%= Hguest.guest_phone %>">
                <input type="hidden" name="date" value="<%= Hguest.date_of_join %>">
                <input type="hidden" name="time " value="<%= Hguest.time_of_join %>">
                <button class="btn-outline-danger" type="submit">Delete Permanently</button>
            </form>
            </div>

     
            <!--Edit button-->
            
         <% }); %>   
    </div>
</div>





<%- include('partials/footer.ejs'); -%>
